<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="ch.tupperman.tupperman.layout.DetailFragment">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Name"/>

        <EditText
            android:id="@+id/editText_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:ems="10"
            android:inputType="textMultiLine"/>

        <TextView
            android:id="@+id/textView_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="@string/details_description"/>

        <EditText
            android:id="@+id/editText_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:ems="10"
            android:inputType="textMultiLine"/>

        <TextView
            android:id="@+id/textView_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:text="Weight [gram]"/>

        <EditText
            android:id="@+id/editText_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:ems="10"
            android:inputType="number"
            />

        <TextView
            android:id="@+id/textView_freeze"
            android:layout_column="0"
            android:layout_row="6"
            android:layout_gravity="left"
            android:text="dd.MM.yyyy"/>

        <Button
            android:id="@+id/button_freeze_detail"
            android:layout_column="0"
            android:layout_row="6"
            android:layout_gravity="right"
            android:text="Freeze Date"/>


        <TextView
            android:id="@+id/textView_expire"
            android:layout_column="0"
            android:layout_row="7"
            android:layout_gravity="left"
            android:text="dd.MM.yyyy"/>

        <Button
            android:id="@+id/button_expire_detail"
            android:layout_column="0"
            android:layout_row="7"
            android:layout_gravity="right"
            android:text="Expire Date"/>

        <Button
            android:id="@+id/button_save_detail"
            android:layout_column="0"
            android:layout_row="8"
            android:layout_gravity="left"
            android:text="Save"/>

        <Button
            android:id="@+id/button_delete_detail"
            android:layout_column="0"
            android:layout_row="8"
            android:layout_gravity="right"
            android:text="Delete"/>
    </GridLayout>

</FrameLayout>

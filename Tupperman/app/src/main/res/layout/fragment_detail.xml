<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="ch.tupperman.tupperman.layout.DetailFragment">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <EditText
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_row="4"
            android:layout_column="0"/>

        <TextView
            android:text="@string/details_description"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_description"
            android:layout_row="3"
            android:layout_column="0"/>

        <TextView
            android:text="@string/details_uuid"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView_uuid"
            android:layout_row="6"
            android:layout_column="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_uuid"
            android:layout_row="2"
            android:layout_column="0"/>

        <EditText
            android:layout_width="361dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editText_title"
            android:layout_row="0"
            android:layout_column="0"
            android:inputType="textCapWords"/>

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText_datefrozen"
            android:layout_row="13"
            android:layout_column="0"/>
        
    </GridLayout>
</FrameLayout>
